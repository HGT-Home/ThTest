@model NavigationMenuViewModel
@{
}

@foreach(Category c in this.Model.Categories)
{
    <a class="btn btn-block @(c.Id == this.Model.CurrentCategoryId?"btn-primary":"btn-secondary")"
       asp-action="GetProductByCategoryId"
       asp-controller="Product"
       asp-route-categoryId="@c.Id"
       asp-route-page="1">
        @c.Name
    </a>
}