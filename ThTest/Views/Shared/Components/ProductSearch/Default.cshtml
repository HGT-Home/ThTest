<form class="form-inline" asp-controller="Product" asp-action="Search" method="get">
    <div class="form-group">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" name="keyword" placeholder="@this.Localizer["Search"]" title="@this.Localizer["Search"]" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-secondary" title="@this.Localizer["Search"]">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>