@model LoginViewModel

@{
    ViewBag.Title = Localizer["Title"];
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@TempData["ReturnUrl"]" method="post" role="form">
                @this.Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                @*<div class="text-danger" asp-validation-summary="All"></div>*@
                <div class="form-group">
                    <label asp-for="@this.Model.Username" class="col-form-label">@Localizer["Username"]</label>
                    <div class="input-group input-group-sm">
                        <div class="input-group-addon">
                            <i class="fa fa-user-circle-o"></i>
                        </div>
                        <input class="form-control" placeholder="@Localizer["Username"]" type="text" asp-for="@this.Model.Username" value="@Model.Username" />
                    </div>
                    <div><span class="text-danger" asp-validation-for="@this.Model.Username"></span></div>
                </div>
                <div class="form-group">
                    <label for="txtPassword" class="col-form-label">@Localizer["Password"]</label>
                    <div class="input-group input-group-sm">
                        <div class="input-group-addon"><i class="fa fa-key"></i></div>
                        <input class="form-control" placeholder="@Localizer["Password"]" type="password" id="txtPassword" asp-for="@this.Model.Password" value="@Model.Password" />
                    </div>
                    <div><span class="text-danger" asp-validation-for="@this.Model.Password"></span></div>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" asp-for="@this.Model.IsRememberMe" checked="@this.Model.IsRememberMe" />
                        @Localizer["Remember me."]
                    </label>
                </div>
                <hr />
                <div class="form-group text-right">
                    <div class="btn-group btn-group-sm">
                        <button type="submit" class="btn btn-outline-primary">@Localizer["Login"]</button>
                        <button type="reset" class="btn btn-outline-danger">@Localizer["Cancel"]</button>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <a asp-action="Register" asp-controller="Account">@Localizer["Register"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
