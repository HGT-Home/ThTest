@model EditCategoryViewModel

@{
    switch (this.Model.Mode)
    {
        case ThAction.Add:
            ViewBag.Title = Localizer["Add Category"];
            break;
        case ThAction.Edit:
            ViewBag.Title = Localizer["Edit Category"];
            break;
    }
}

<div class="container">
    <form asp-controller="Product" asp-action="SaveCategory">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="@this.Model.Id" value="@this.Model.Id" />
        <input type="hidden" asp-for="@this.Model.Mode" value="@this.Model.Mode" />
        <div class="form-group">
            <label asp-for="@this.Model.NameVn" class="col-form-label">@Localizer["Vietnamese Name"]</label>
            <div class="input-group input-group-sm">
                <div class="input-group-addon">
                    <i class="fa fa-edit"></i>
                </div>
                <input class="form-control" placeholder="@Localizer["Vietnamese Name"]" type="text" asp-for="@this.Model.NameVn" value="@Model.NameVn" />
            </div>
            <div><span class="text-danger" asp-validation-for="@this.Model.NameVn"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="@this.Model.Name" class="col-form-label">@Localizer["English Name"]</label>
            <div class="input-group input-group-sm">
                <div class="input-group-addon">
                    <i class="fa fa-edit"></i>
                </div>
                <input class="form-control" placeholder="@Localizer["English Name"]" type="text" asp-for="@this.Model.Name" value="@Model.Name" />
            </div>
            <div><span class="text-danger" asp-validation-for="@this.Model.Name"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="@this.Model.Description">@Localizer["Description"]</label>
            <div class="input-group input-group-sm">
                <div class="input-group-addon"><i class="fa fa-sticky-note"></i></div>
                <textarea asp-for="@this.Model.Description" class="form-control" rows="10" placeholder="@Localizer["Description"]"></textarea>
            </div>
            <div><span asp-validation-for="@this.Model.Description" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="@this.Model.FileImage">@Localizer["Select image"]</label>
            <div class="input-group input-group-sm">
                <div class="input-group-addon"><i class="fa fa-file-image-o"></i></div>
                <input asp-for="@this.Model.FileImage" class="form-control-file" type="file" accept="image/*" placeholder="@Localizer["Select image"]" />
            </div>
            <div><span asp-validation-for="@this.Model.FileImage" class="text-danger"></span></div>
        </div>

        <hr />
        <div class="form-group text-right">
            <button class="btn btn-primary" type="submit" title="@Localizer["Save"]"><i class="fa fa-save"></i></button>
            @*<button class="btn btn-outline-secondary" type="submit">@Localizer["Back"]</button>*@
        </div>
    </form>
</div>