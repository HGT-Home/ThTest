@model EditProductViewModel

@{
    switch (this.Model.Mode)
    {
        case ThAction.Add:
            ViewBag.Title = Localizer["Add Product"];
            break;
        case ThAction.Edit:
            ViewBag.Title = Localizer["Edit Product"];
            break;
        default:
            break;
    }
}

<div class="bg-light">
    <div class="m-3">
        <form method="post" asp-action="Save" enctype="multipart/form-data" asp-antiforgery="true">
            @Html.AntiForgeryToken()
            <input asp-for="@this.Model.Id" type="hidden" value="@this.Model.Id" />
            <input asp-for="@this.Model.Mode" type="hidden" value="@this.Model.Mode" />
            <div class="form-group">
                <label asp-for="@this.Model.Name">@Localizer["Name"]</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-addon"><i class="fa fa-edit"></i></div>
                    <input asp-for="@this.Model.Name" class="form-control" placeholder="@Localizer["Name"]" />
                </div>
                <div><span asp-validation-for="@this.Model.Name" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="@this.Model.UnitPrice">@Localizer["UnitPrice"]</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-addon"><i class="fa fa-edit"></i></div>
                    <input asp-for="@this.Model.UnitPrice" class="form-control" placeholder="@Localizer["UnitPrice"]" />
                </div>
                <div><span asp-validation-for="@this.Model.UnitPrice" class="text-danger"></span></div>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.Description">@Localizer["Description"]</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-addon"><i class="fa fa-sticky-note"></i></div>
                    <textarea asp-for="@this.Model.Description" class="form-control" rows="10" placeholder="@Localizer["Description"]"></textarea>
                </div>
                <div><span asp-validation-for="@this.Model.Description" class="text-danger"></span></div>

            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-1 text-center">
                        <img class="img-thumbnail" src="@Url.Content("/" + this.Model.Image)" />
                        <span>@this.Localizer["Preview"]</span>
                    </div>
                    <div class="col-12 col-sm-12 col-md-11 col-lg-11 col-xl-11">
                        <label asp-for="@this.Model.FileImage">@Localizer["Select image"]</label>
                        <span class="input-group input-group-sm">
                            <span class="input-group-addon"><i class="fa fa-file-image-o"></i></span>
                            <input asp-for="@this.Model.FileImage" class="form-control-file" type="file" accept="image/*" placeholder="@Localizer["FileImage"]" />
                        </span>
                        <div><span asp-validation-for="@this.Model.FileImage" class="text-danger"></span></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.CategoryId">@Localizer["Select category"]</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-addon"><i class="fa fa-hand-o-up"></i></div>
                    <select asp-for="@this.Model.CategoryId" asp-items="@(new SelectList(this.Model.Categories, "Id", "Name"))" class="form-control">
                        <option value="">@Localizer["Please select category"]</option>
                    </select>
                </div>
                <div><span asp-validation-for="@this.Model.CategoryId" class="text-danger"></span></div>
            </div>

            <div class="form-group">
                <label asp-for="@this.Model.SupplierId">@Localizer["Select supplier"]</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-addon"><i class="fa fa-hand-o-up"></i></div>
                    <select asp-for="@this.Model.SupplierId" asp-items="@(new SelectList(this.Model.Suppliers, "Id", "Name"))" class="form-control">
                        <option value="">@Localizer["Please select supplier"]</option>
                    </select>
                </div>
                <div><span asp-validation-for="@this.Model.SupplierId" class="text-danger"></span></div>
            </div>
            <div class="text-right">
                <div class="btn-group">
                    <button class="btn btn-primary" type="submit" title="@this.Localizer["Save"]"><i class="fa fa-save"></i></button>
                    @*<button class="btn btn-danger" asp-controller="Home" asp-action="Index" title="@Localizer["Cancel"]"><i class="fa fa-arrow-left"></i></button>*@
                </div>
            </div>
        </form>
    </div>
</div>